                        <exclude name="verifyContactSalesUrl"/>
                        <exclude name="verifyManagementUrl"/>
                        <exclude name="verifyTimelineModuleUrl"/>
                        <exclude name="verifySkillsAsseessmentUrl"/>
                        <exclude name="verifyGoalsAndTasksUrl"/>
                        <exclude name="verifyRobustReportingUrl"/>
                        <exclude name="verifyRetainUrl"/>
                        <exclude name="verifyContentServicesUrl"/>
