                        <exclude name="verifyArcVideoUrl"/>
                        <exclude name="verifyLearnFromYourLearningUrl"/>
                        <exclude name="verifyManagerDashboardUrl"/>
                        <exclude name="verifyAdminUrl"/>
                        <exclude name="verifyEasyToUseUrl"/>
                        <exclude name="verifyAnytimeAnywhereUrl"/>
                        <exclude name="verifyContactTelephoneEmailAndLocation"/>
                        <exclude name="verifySocialNetworkPagesUrl"/>
                        <exclude name="verifyBottomSupportTermsUrl"/>
                        <exclude name="verifyBottomPrivacyPolicyUrl"/>
                        <exclude name="verifyBottomTermsOfUseUrl"/>
                        <exclude name="verifyBottomAccessibilityUrl"/>
                        <exclude name="verifyBottomGDPRUrl"/>
                        <exclude name="verifyBottomNewsUrl"/>
                    </methods>
                </class>

                <class name="com.sevadevelopment.instructure.tests.TestBridgeTopNavLinks">
                    <methods>
                        <include name="checkAlllinks"/>
                        <exclude name="verifyProductTabInTopNav"/>
                        <exclude name="verifySolutionsUrl"/>
                        <exclude name="verifyCustomerStoriesUrl"/>
                        <exclude name="verifyResourcesUrl"/>
                        <exclude name="verifyAboutUrl"/>
                        <exclude name="verifyBlogUrl"/>
                        <exclude name="verifyBookADemoUrl"/>
