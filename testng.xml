                </class>

                <class name="com.sevadevelopment.instructure.tests.TestRequestDemoForm" >
                    <methods>
                        <exclude name="fillRequestDemoFormAndVerifyThankingPage"/>
                    </methods>
                </class>
            </classes>
    </test>

